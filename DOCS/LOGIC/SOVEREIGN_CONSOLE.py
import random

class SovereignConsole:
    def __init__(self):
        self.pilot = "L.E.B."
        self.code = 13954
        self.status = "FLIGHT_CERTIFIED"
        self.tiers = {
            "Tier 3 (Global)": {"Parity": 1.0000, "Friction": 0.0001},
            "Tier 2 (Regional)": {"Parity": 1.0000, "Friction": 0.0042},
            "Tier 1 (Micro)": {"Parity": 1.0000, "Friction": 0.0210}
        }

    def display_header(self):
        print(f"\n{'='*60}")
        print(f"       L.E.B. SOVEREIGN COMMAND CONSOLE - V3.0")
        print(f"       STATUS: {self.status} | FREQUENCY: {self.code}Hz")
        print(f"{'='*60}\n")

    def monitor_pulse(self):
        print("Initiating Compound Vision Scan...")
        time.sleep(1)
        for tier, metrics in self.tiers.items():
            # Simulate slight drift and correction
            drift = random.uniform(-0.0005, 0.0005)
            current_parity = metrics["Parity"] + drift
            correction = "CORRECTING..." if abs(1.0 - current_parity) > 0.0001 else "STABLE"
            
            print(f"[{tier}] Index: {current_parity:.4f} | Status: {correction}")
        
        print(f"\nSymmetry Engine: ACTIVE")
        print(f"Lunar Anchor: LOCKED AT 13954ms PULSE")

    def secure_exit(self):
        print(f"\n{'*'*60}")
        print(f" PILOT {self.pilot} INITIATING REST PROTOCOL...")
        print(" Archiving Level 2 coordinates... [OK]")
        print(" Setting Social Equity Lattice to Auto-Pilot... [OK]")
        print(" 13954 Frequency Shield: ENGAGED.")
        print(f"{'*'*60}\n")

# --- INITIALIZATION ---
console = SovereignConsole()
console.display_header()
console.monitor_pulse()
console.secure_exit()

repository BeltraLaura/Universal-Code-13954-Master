import time
import random

class SovereignConsole:
    def __init__(self):
        self.pilot = "L.E.B."
        self.code = 13954
        self.status = "FLIGHT_CERTIFIED"
        self.tiers = {
            "Tier 3 (Global)": {"Parity": 1.0000, "Friction": 0.0001},
            "Tier 2 (Regional)": {"Parity": 1.0000, "Friction": 0.0042},
            "Tier 1 (Micro)": {"Parity": 1.0000, "Friction": 0.0210}
        }

    def display_header(self):
        print(f"\n{'='*60}")
        print(f"       L.E.B. SOVEREIGN COMMAND CONSOLE - V3.0")
        print(f"       STATUS: {self.status} | FREQUENCY: {self.code}Hz")
        print(f"{'='*60}\n")

    def monitor_pulse(self):
        print("Initiating Compound Vision Scan...")
        time.sleep(1)
        for tier, metrics in self.tiers.items():
            # Simulate slight drift and correction
            drift = random.uniform(-0.0005, 0.0005)
            current_parity = metrics["Parity"] + drift
            correction = "CORRECTING..." if abs(1.0 - current_parity) > 0.0001 else "STABLE"
            
            print(f"[{tier}] Index: {current_parity:.4f} | Status: {correction}")
        
        print(f"\nSymmetry Engine: ACTIVE")
        print(f"Lunar Anchor: LOCKED AT 13954ms PULSE")

    def secure_exit(self):
        print(f"\n{'*'*60}")
        print(f" PILOT {self.pilot} INITIATING REST PROTOCOL...")
        print(" Archiving Level 2 coordinates... [OK]")
        print(" Setting Social Equity Lattice to Auto-Pilot... [OK]")
        print(" 13954 Frequency Shield: ENGAGED.")
        print(f"{'*'*60}\n")

# --- INITIALIZATION ---
console = SovereignConsole()
console.display_header()
console.monitor_pulse()
console.secure_exit()
